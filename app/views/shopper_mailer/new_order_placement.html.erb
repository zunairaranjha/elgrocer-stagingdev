              <tr>
                <td style="color: #429d39; font-family: Arial, sans-serif; font-size: 18px;text-align:center;padding-bottom:20px;">
                  <%=I18n.t("order_placement.dear_customer") %>
                </td>
              </tr>
              <tr>
                <td style="padding:0px 0 15px 0; color: #429d39; font-family: Arial, sans-serif; font-size: 14px; line-height:20px;text-align:justify;">
                  <%=I18n.t("order_placement.declaring_delay") %>
                </td>
              </tr>
              <tr>
                <td style="padding:0px 0 15px 0; color: #429d39; font-family: Arial, sans-serif; font-size: 14px; line-height: 20px;">
