<div class="page-center">
      <div class="page-center-in">
        <div class="container-fluid">
          <%= form_for @shopper, :url => shopper_password_reset_path(params[:id]), html: {class: "sign-box"} do |f| %>
            <% if @shopper.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% for message in @shopper.errors.full_messages %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="sign-avatar">
              <%= image_tag 'key-logo.png', alt: 'key-logo'%>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true, placeholder: 'New Password', class: 'form-control' %>
            </div>
            <fieldset>
            <div class="radio_label">
              <%= radio_button_tag :show_password,'button', false, class: '' %>
              <%= label_tag :show_password %>
            </div>
            </fieldset>
            <%= f.submit 'Update Password', class: 'btn btn-rounded' %>
            <%#= render "students/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>